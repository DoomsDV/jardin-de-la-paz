<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Onest:wght@100;200;300;400;500;600;700&display=swap');
	* {
		font-family: 'Onest', sans-serif;
	}
	h3 {
		font-weight: 700;
	}
	p !important{
		font-weight: 100;
	}
	@keyframes show {
		from {
			opacity: .5;
			scale: 25%;
		}
		to {
			opacity: 1;
			scale: 100%;
		}
	}
	.content {
		view-timeline-name: --image;
		view-timeline-axis: block;
		animation-timeline: --image;
		animation-name: show;
		animation-range: entry 25% cover 60%;
		animation-fill-mode: both;
	}
	#titleAnimated {
		view-timeline-name: --image;
		view-timeline-axis: block;
		animation-timeline: --image;
		animation-name: show;
		animation-range: entry 30% cover 80%;
		animation-fill-mode: both;
	}
</style>